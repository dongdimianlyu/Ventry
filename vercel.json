{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps && find . -name '.babelrc' -not -path '*/node_modules/*' -delete && npm install --save-dev @babel/plugin-transform-private-methods @babel/plugin-transform-private-property-in-object @babel/plugin-transform-class-properties @babel/plugin-transform-class-static-block @babel/plugin-transform-runtime @babel/plugin-proposal-do-expressions @babel/runtime",
  "buildCommand": "DISABLE_ESLINT_PLUGIN=true NEXT_DISABLE_SOURCEMAPS=true NODE_OPTIONS='--max-old-space-size=4096' npm run build --no-lint",
  "framework": {
    "name": "nextjs",
    "useNodeNext": true,
    "nodeVersion": "18.x"
  },
  "regions": ["sfo1"],
  "outputDirectory": ".next",
  "env": {
    "NEXT_RUNTIME": "nodejs",
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "DISABLE_FIREBASE": "true",
    "FIREBASE_ADMIN_SDK_DISABLED": "true",
    "BABEL_DISABLE_CACHE": "1"
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "ignoreCommand": "echo 'Skipping checks'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/health"
    }
  ],
  "build": {
    "env": {
      "NEXT_DISABLE_ESLINT": "true",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "BABEL_DISABLE_CACHE": "1"
    }
  }
} 